# ==========================================
# 害虫识别系统 - 环境变量配置示例
# ==========================================
# 复制此文件为 .env 并根据实际环境修改配置
# 注意：.env 文件包含敏感信息，不应提交到版本控制系统

# ==========================================
# 数据库配置
# ==========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=pest_recognition
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# ==========================================
# 应用配置
# ==========================================
# 后端服务端口
BACKEND_PORT=8080
# 前端服务端口
FRONTEND_PORT=8081

# ==========================================
# 文件存储配置
# ==========================================
# 文件上传目录（绝对路径）
UPLOAD_DIR=/path/to/upload/directory
# 最大文件大小（MB）
MAX_FILE_SIZE=10

# ==========================================
# AI模型配置
# ==========================================
# 模型文件路径
MODEL_PATH=models/pest_classification_model.onnx
# 模型输入尺寸
MODEL_INPUT_SIZE=224
# 识别置信度阈值
CONFIDENCE_THRESHOLD=0.5

# ==========================================
# 安全配置
# ==========================================
# JWT密钥（如果使用JWT认证）
JWT_SECRET=your_jwt_secret_key_here
# 会话密钥
SESSION_SECRET=your_session_secret_key_here

# ==========================================
# 第三方服务配置
# ==========================================
# 邮件服务配置（如果需要）
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password

# 云存储配置（如果使用）
CLOUD_STORAGE_ACCESS_KEY=your_access_key
CLOUD_STORAGE_SECRET_KEY=your_secret_key
CLOUD_STORAGE_BUCKET=your_bucket_name

# ==========================================
# 监控和日志配置
# ==========================================
# 日志级别
LOG_LEVEL=INFO
# 日志文件路径
LOG_FILE_PATH=logs/pest-recognition.log

# ==========================================
# 开发环境配置
# ==========================================
# 环境类型：development, production, test
NODE_ENV=development
# 是否启用调试模式
DEBUG_MODE=true
# 是否显示详细错误信息
SHOW_ERROR_DETAILS=true

# ==========================================
# 生产环境配置
# ==========================================
# 生产环境域名
PRODUCTION_DOMAIN=your-domain.com
# SSL证书路径
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# ==========================================
# 缓存配置
# ==========================================
# Redis配置（如果使用Redis缓存）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ==========================================
# API配置
# ==========================================
# API基础URL
API_BASE_URL=http://localhost:8080/api
# API版本
API_VERSION=v1
# 请求超时时间（毫秒）
API_TIMEOUT=30000

# ==========================================
# 跨域配置
# ==========================================
# 允许的跨域源（多个用逗号分隔）
CORS_ALLOWED_ORIGINS=http://localhost:8081,http://127.0.0.1:8081
# 允许的请求方法
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
# 是否允许携带凭证
CORS_ALLOW_CREDENTIALS=true