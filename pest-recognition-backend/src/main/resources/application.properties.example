# 应用配置
spring.application.name=pest-recognition-backend
server.port=8080
server.max-http-header-size=10KB

# 数据库配置
spring.datasource.url=jdbc:mysql://localhost:3306/pest_recognition?useUnicode=true&characterEncoding=utf8&useSSL=false&serverTimezone=Asia/Shanghai
spring.datasource.username=your_username
spring.datasource.password=your_password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA配置
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect
spring.jpa.properties.hibernate.format_sql=true

# 文件上传配置
spring.servlet.multipart.enabled=true
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB
spring.servlet.multipart.file-size-threshold=2KB

# 文件存储路径
file.upload-dir=uploads

# 跨域配置
cors.allowed-origins=http://localhost:8081,http://127.0.0.1:8081
cors.allowed-methods=GET,POST,PUT,DELETE,OPTIONS
cors.allowed-headers=*
cors.allow-credentials=true

# 日志配置
logging.level.com.example.pestrecognition=INFO
logging.level.org.springframework.web=DEBUG
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss} - %msg%n
logging.pattern.file=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n

# Swagger配置
springdoc.api-docs.enabled=true
springdoc.swagger-ui.enabled=true
springdoc.swagger-ui.path=/swagger-ui.html

# AI模型配置
model.path=models/
model.name=pest_classification_model.onnx
model.input-size=224
model.batch-size=1

# 缓存配置
spring.cache.type=simple

# 开发环境配置
spring.profiles.active=development